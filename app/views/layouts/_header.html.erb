<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container" >
    <%= link_to t(".header_text"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home_text"), root_path %></li>
        <li><%= link_to t(".help_text"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t(".user_text"), users_path %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
              <%= current_user.name %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile_text"), current_user %></li>
              <li><%= link_to t(".settings_text"), edit_user_path(@current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".logout_text"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".log_text"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
