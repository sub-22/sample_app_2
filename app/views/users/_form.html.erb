<%= form_for @user do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.label :name, t("users.label.name") %>
  <%= f.text_field :name, class: "form_control" %>
  <%= f.label :email, t("users.label.email") %>
  <%= f.email_field :email, class: "form_control" %>
  <%= f.label :password, t("users.label.password") %>
  <%= f.password_field :password, class: "form-control" %>
  <%= f.label :password_confirmation, t("users.label.confirm_password") %>
  <%= f.password_field :password_confirmation, class: "form-control" %>
  <%= f.submit t("users.edit.save_text"), class: "btn btn-primary" %>
<% end %>
