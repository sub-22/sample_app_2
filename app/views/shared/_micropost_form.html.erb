<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("microposts.placeholder") %>
  </div>
  <span class="image">
    <%= f.file_field :image, accept: Settings.micropost.img_file %>
  </span>
  <%= f.submit t("microposts.submit"), class: "btn btn-primary" %>
<% end %>
