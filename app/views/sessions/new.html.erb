<%= provide :title, t(".subtitle") %>
<h1><%= t ".subtitle" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label :email, t("sessions.login.label.email") %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password, t("sessions.login.label.password") %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>
          <%= t "sessions.login.label.remember_me" %>
          <%= link_to t("sessions.forgot_pass.forgot_text"), new_password_reset_path %>
        </span>
      <% end %>
      <%= f.submit t(".submit"), class: "btn btn-primary" %>
    <% end %>
    <%= t ".new_user" %>
    <%= link_to t(".sign_up"), signup_path %>
  </div>
</div>
